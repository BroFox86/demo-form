              span.field-group__triangle

        // Billing Address
        .form__field.field-group
          .field-group__input-group
            input.field-group__input#address(name="billing-address" autocomplete="address-line1")
            label.field-group__label(for="address") Billing Address
            +svg("#error_outline-24px")(class="field-group__required")

        .form__fields

          // City
          .form__field.field-group
            .field-group__input-group
              input.field-group__input#city(name="city" autocomplete="address-level2")
              label.field-group__label(for="city") City
              +svg("#error_outline-24px")(class="field-group__required")
          
          // State/Region
          .form__field.field-group
            .field-group__input-group
              select.field-group__input(name="region" required)
                option(value="" selected disabled) State/Region
                option(value="") Option
                option(value="") Option
                option(value="") Option
              span.field-group__triangle
        
        .form__fields

          // Zip code
