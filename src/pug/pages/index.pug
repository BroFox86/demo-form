extends /pug/layout/_layout

block variables
  - var title = "Demo Form"

block page-content
  .form
    header.form__header
      img.form__logo(src="images/logo.png", alt="")

    form.form__inner.js-material-form-toggle.js-validation-toggle(action="#")

      aside.form__alert.alert.alert--danger
        +svg("#info-24px")(class="alert__icon") 
        .alert__text 
          b DANGER: 
          span Lorem ipsum dolor sit amet consectetur adipisicing elit. Ex officiis itaque atque, provident ipsam!
        button.alert__close-btn(type="button" onclick="alertNote.close(this)" aria-label="Close")
          +svg("#clear-24px")(class="alert__close-icon")

      fieldset.form__fieldset
        .form__fields
        
          // Amount
          .form__amount.form__field.field-group
            .field-group__input-group
              input.field-group__input#amount(
                name="amount" 
                type="number" 
                min="0" 
                pattern="\\d*" 
                placeholder="Enter amount" 
                value="1000"
                aria-label="Amount of money" 
                required
              )
              +svg("#attach_money-24px")(class="field-group__icon")
            
          // Fake field for better alignment on all screen sizes
          .form__field.field-group(style="visibility: hidden")
        
      fieldset.form__fieldset
        legend.form__legend Contact Details

        .form__fields
        
          // First name
          .form__field.field-group
            .field-group__input-group
              input.field-group__input#firstName(name="firstName" autocomplete="given-name" placeholder="Joe" required)
              label.field-group__label(for="firstName") First Name
              +svg("#error_outline-24px")(class="field-group__required")
          
          // Last name
          .form__field.field-group
            .field-group__input-group
              input.field-group__input#lastName(name="lastName" autocomplete="family-name" placeholder="Doe" required)
              label.field-group__label(for="lastName") Last Name
              +svg("#error_outline-24px")(class="field-group__required")

        .form__fields

          // Telephone
          .form__field.field-group
            .field-group__input-group
              input.field-group__input#phone(name="phone" autocomplete="tel" pattern="^\\d{3}[\\-\\s]?\\d{3}[\\-\\s]?\\d{4}$" placeholder="123-456-7890" required)
              label.field-group__label(for="phone") Phone Number
              +svg("#error_outline-24px")(class="field-group__required")

          // Email
          .form__field.field-group
            .field-group__input-group
              input.field-group__input#email(name="email" type="email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,4}$" placeholder="email@example.com" required)
              label.field-group__label(for="email") Email Address
              +svg("#error_outline-24px")(class="field-group__required")
        
      fieldset.form__fieldset
        legend.form__legend Payment Information

        // Card number
        .form__field.field-group.js-card-detection-toggle
          .field-group__input-group
            input.field-group__input#ccNumber(name="cc-number" minlength="16" maxlength="16" pattern="[3456]{1}\\d{15}" autocomplete="cc-number" required)
            label.field-group__label(for="ccNumber") Card number
            .field-group__card

        .form__fields
          // Expiry Month
          .form__field.field-group
            .field-group__input-group
              select.field-group__input(name="expMonth" required)
                option(value="" selected disabled) Expiry Month
                option(value="01") 01
                option(value="02") 02
                option(value="03") 03
                option(value="04") 04
                option(value="05") 05
                option(value="06") 06
                option(value="07") 07
                option(value="08") 08
                option(value="09") 09
                option(value="10") 10
                option(value="11") 11
                option(value="12") 12
              span.field-group__triangle
          
          // Expiry Year
          .form__field.field-group
            .field-group__input-group
